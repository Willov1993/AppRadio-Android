<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragments.EmisorasFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        app:cardElevation="2dp">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_emisora_item"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_weight="0"
                android:contentDescription="segmentoImagen"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/radio_icon_48" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_weight="10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_titulo_emisora_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titulo Emisora"
                    android:textColor="@color/TitleColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_info_emisora_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Ciudad - Frecuencia"
                    android:textColor="@color/TextColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_info_emisora"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|center"
                android:layout_marginEnd="10dp"
                android:background="@drawable/info_radio"
                android:backgroundTint="@color/appColorTheme"
                android:gravity="center_vertical|center_horizontal|center" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>