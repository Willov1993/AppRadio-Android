<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appColorTheme</item>
        <item name="colorPrimaryDark">@color/appColorTheme</item>
        <item name="colorAccent">@color/seleccion_nav</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.NavigationView</item>
        <item name="bottomNavigationStyle">@style/Widget.Design.BottomNavigationView</item>
    </style>


    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/seleccion_nav</item>
    </style>


    <style name="FacebookLoginButton">
        <item name="android:background">@drawable/facebook</item>

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/tab_color_bg</item>
        <item name="tabPaddingStart">2dp</item>
        <item name="tabPaddingEnd">2dp</item>
        <!--item name="tabBackground">@drawable/underline_background</item-->
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/seleccion_nav</item>
        <item name="tabIndicatorHeight">5000dp</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
