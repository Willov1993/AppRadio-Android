<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appColorTheme</item>
        <item name="colorPrimaryDark">@color/appColorTheme</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.NavigationView</item>
        <item name="bottomNavigationStyle">@style/Widget.Design.BottomNavigationView</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>

        <!-- Customize textinputlayout -->
        <item name="colorControlNormal">@color/textoGris</item>
        <item name="colorControlActivated">@color/textoGris</item>
        <item name="colorControlHighlight">@color/textoGris</item>


    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/textoGris</item>
    </style>



    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/holo_orange_dark</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:background">@drawable/facebook</item>

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
